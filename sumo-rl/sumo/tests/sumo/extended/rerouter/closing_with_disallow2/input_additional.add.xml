<additional xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/additional_file.xsd">
    <rerouter id="rerouter" edges="beg" probability="0.5">
		<interval begin="0" end="86400">
			<closingReroute id="middle"/>
		</interval>
	</rerouter>
    <rerouter id="rerouter2" edges="left">
        <interval begin="0" end="100">
            <closingReroute id="end" disallow="all"/>
            <closingReroute id="rend" disallow="all"/>
            <closingReroute id="left2end" disallow="all"/>
            <closingReroute id="right2end" disallow="all"/>
        </interval>
    </rerouter>
    <rerouter id="rerouter3" edges="right">
        <interval begin="0" end="100">
            <closingReroute id="end" disallow="all"/>
            <closingReroute id="rend" disallow="all"/>
        </interval>
    </rerouter>
</additional>
